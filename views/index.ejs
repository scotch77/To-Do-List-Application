<%- include("./partials/header") %>

<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="#">To do App</a>
  </nav>

<div class="container mt-5" >
    <form action="/add/tdo" method="POST" class="d-flex">
        <input type="text" name = "todo" id="" class="form-control" placeholder="Enter to do">
        <input type="submit" value="Add to do" class="btn btn-md btn-primary mx-2">
    </form>

    <ul class="list-group my-5">
      <% todo.forEach(todos => { %>
        <li class="list-group-item"><%= todos.todo %>
          <a href="delete/todo/<%=todos._id%>" class="btn btn-danger">Delete</a>
        </li>
      <% }) %>

      
      </ul>


</div>


<%- include("./partials/footer") %>